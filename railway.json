{
  "$schema": "https://railway.app/schema.json",
  "name": "aih-dashboard",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node aih-backup.js serve",
    "healthcheckPath": "/api/status",
    "restartPolicy": "ON_FAILURE",
    "maxRestartCount": 5
  },
  "env": {
    "DATABASE_URL": {
      "required": true
    }
  }
}
